{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "composer install --no-dev && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "bash start.sh",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5
  },
  "plugins": {
    "mysql": {
      "version": "8.0"
    }
  }
}
